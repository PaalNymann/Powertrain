{% comment %}
  Clickable Product Card Snippet
  Makes product cards clickable and links to the regular Shopify product page
{% endcomment %}

<div class="product-card clickable-card" onclick="window.open('{{ product.url }}', '_blank')">
  <div class="product-image">
    {% if product.featured_image %}
      <img src="{{ product.featured_image | img_url: 'medium' }}" alt="{{ product.title | escape }}">
    {% else %}
      <div class="no-image">Ingen bilde</div>
    {% endif %}
  </div>
  
  <div class="product-info">
    <h3 class="product-title">{{ product.title }}</h3>
    
    <div class="product-price">
      <span class="price">{{ product.price | money }}</span>
      {% if product.compare_at_price > product.price %}
        <span class="compare-price">{{ product.compare_at_price | money }}</span>
      {% endif %}
    </div>
    
    <div class="product-details">
      {% if product.variants.first.sku %}
        <p class="sku">SKU: {{ product.variants.first.sku }}</p>
      {% endif %}
      
      <p class="stock">Lager: {{ product.variants.first.inventory_quantity | default: 0 }}</p>
      
      {% if product.metafields.custom.oem %}
        <p class="oem">OEM: {{ product.metafields.custom.oem }}</p>
      {% endif %}
      
      {% if product.metafields.custom.number %}
        <p class="number">Art.nr: {{ product.metafields.custom.number }}</p>
      {% endif %}
    </div>
    
    <div class="click-hint">
      <span>Klikk for å se produkt →</span>
    </div>
  </div>
</div>

<style>
.product-card {
  border: 1px solid #ddd;
  border-radius: 8px;
  padding: 15px;
  background: white;
  cursor: pointer;
  transition: transform 0.2s, box-shadow 0.2s;
  text-decoration: none;
  color: inherit;
  display: block;
}

.product-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(0,0,0,0.15);
}

.product-image {
  margin-bottom: 15px;
  text-align: center;
}

.product-image img {
  width: 100%;
  height: auto;
  border-radius: 6px;
  max-height: 200px;
  object-fit: cover;
}

.no-image {
  background: #f8f9fa;
  padding: 40px;
  border-radius: 6px;
  color: #6c757d;
  text-align: center;
}

.product-title {
  font-size: 1.1rem;
  margin: 0 0 10px 0;
  color: #333;
  font-weight: bold;
}

.product-price {
  margin-bottom: 10px;
}

.price {
  font-size: 1.2rem;
  font-weight: bold;
  color: #28a745;
}

.compare-price {
  color: #6c757d;
  text-decoration: line-through;
  margin-left: 8px;
  font-size: 0.9rem;
}

.product-details {
  margin-bottom: 15px;
  font-size: 0.9rem;
}

.product-details p {
  margin: 5px 0;
  color: #666;
}

.sku {
  font-family: monospace;
  background: #f8f9fa;
  padding: 2px 6px;
  border-radius: 3px;
}

.oem {
  color: #dc3545;
  font-weight: bold;
}

.number {
  color: #28a745;
  font-weight: bold;
}

.click-hint {
  text-align: center;
  padding: 10px;
  background: #e9f7ff;
  border-radius: 6px;
  color: #007bff;
  font-weight: bold;
  font-size: 0.9rem;
}

/* Responsive */
@media (max-width: 768px) {
  .product-card {
    padding: 10px;
  }
  
  .product-title {
    font-size: 1rem;
  }
  
  .price {
    font-size: 1.1rem;
  }
}
</style> 